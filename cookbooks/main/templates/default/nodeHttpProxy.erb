var httpProxy = require('http-proxy');
var express = require('express');

httpProxy.createServer(function (req, res, proxy) {

    <% @vhosts = [] -%>
    <% @node_apps.each do |website| -%>
       <% @vhosts << website[:host] -%> 
    <% end -%>

    var nodeVhosts = <%= @vhosts %>
    var host = req.headers['host'];
    var port = nodeVhosts.indexOf(host) > -1
        ? 8080
        : 9000;

    proxy.proxyRequest(req, res, {host: 'localhost', port: port});
}).listen(8000);

var server = express.createServer();

<% @node_apps.each do |website| -%>
var <%= website[:name] %> = express.createServer();
<%= website[:name] %>.get('/', function (req, res) {
    res.send('<%= website[:name] %>');
});

io = require('socket.io').listen(<%= website[:name] %>);
server.use(express.vhost('<%= website[:host] %>', <%= website[:name] %>));
<% end -%>

server.listen(8080);
